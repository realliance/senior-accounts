{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":pinVersions",
    "docker:pinDigests",
    ":rebaseStalePrs",
    ":automergeMinor",
    ":automergeDigest",
    ":pinSkipCi"
  ],
  "kubernetes": {
    "fileMatch": ["deploy/.+\\.yaml$"],
    "commitBody": "[skip ci]"
  }
}
