{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":pinVersions",
    "docker:pinDigests",
    ":rebaseStalePrs",
    ":automergeMinor",
    ":automergeDigest"
  ],
  "kubernetes": {
    "fileMatch": ["deploy/.+\\.yaml$"],
    "commitMessagePrefix": "[ci skip] "
  }
}
