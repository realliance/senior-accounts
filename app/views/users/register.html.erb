<div class="container py-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card card-outline-secondary">
        <div class="card-header">
          <h3 class="mb-0">Account Registration</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: user_url, local: true do |form| %>
          <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <% form.object.errors.full_messages.each do |message| %>
            <div><%= message %></div>
            <% end %>
          </div>
          <% end %>
          <div class="form-group">
            <%= form.label :email, "Email" %>
            <%= form.text_field :email, class: "form-control", required: "" %>
            <p></p>
          </div>
          <div class="form-group">
            <%= form.label :username, "Username" %>
            <%= form.text_field :username, class: "form-control", required: "" %>
            <p></p>
          </div>
          <div class="form-group">
            <%= form.label :password, "Password" %>
            <%= form.password_field :password, class: "form-control", required: "" %>
            <p></p>
          </div>
          <div class="form-group">
            <%= form.submit "Register Account", class: "btn btn-primary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
