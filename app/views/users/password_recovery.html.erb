<div class="container py-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card card-outline-secondary">
        <div class="card-header">
          <h3 class="mb-0">Password Recovery</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: password_recovery_url, local: true do |form| %>
          <div class="form-group">
            <%= form.label :username, "Username" %>
            <%= form.text_field :username, class: "form-control", required: "" %>
            <p></p>
          </div>
          <div class="form-group">
            <%= form.submit "Recover Account", class: "btn btn-primary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
